---
import Action from "@/components/Action.astro";

interface Props {
  data: {
    title: string;
    subTitle: string;
    primaryCta: string;
    secondaryCta: string;
    highlightedTitle?: string;
  };
}

const { data } = Astro.props;
---

<section id="hero-section" class="relative flex flex-col items-center justify-center h-screen w-full">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img 
      src="/1.png" 
      alt="Background Image" 
      class="w-full h-full object-cover opacity-20" 
    />
  </div>
  
  <!-- Content -->
  <div class="relative z-10 md:w-1/2 text-center">
    <img
      src="/8206 x 4081 MGH LOGO.png"
      alt="Hero Image"
      class="w-1/2 h-auto mx-auto mb-6"  
	<h2 class="text-lg opacity-80 md:text-2xl mb-8">
      {data.subTitle}
    </h2>
    <div class="flex flex-col md:flex-row justify-center gap-4 mb-8 mt-5">
      <Action
        as="a"
        type="button"
        class="bg-black text-white py-2 px-4 rounded"
        href="#"
        target="_blank"
      >
        {data.primaryCta}
      </Action>
      <Action
        as="a"
        class="bg-transparent text-black border border-black py-2 px-4 rounded"
        type="button"
        href="#"
        target="_blank"
      >
        {data.secondaryCta}
      </Action>
    </div>
