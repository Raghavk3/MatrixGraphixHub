</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  #hero-section {
    opacity: 0;
    animation: fadeIn 0.8s ease-in-out forwards;
  }

  .relative {
    position: relative;
  }

  .absolute {
    position: absolute;
  }

  .inset-0 {
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }

  .z-10 {
    z-index: 10;
  }

  /* Adjust the shadow here if needed */
  .shadow-md {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Reduce shadow size */
  }
</style>
